<?xml version="1.0" encoding="UTF-8"?>

<!--
	Numeric Hour(date)
-->
<function xmlns="http://www.cfeclipse.org/version1/dictionary"
	name="hour" returns="Numeric">
	<help><![CDATA[
		Gets the current hour of the day.
		Ordinal value of the hour, in the range 0 - 23.
	]]></help>
	<parameter name="date" type="DateTime" required="true">
		<help><![CDATA[
		]]></help>
		<values>
			<value option="now()" />
		</values>
	</parameter>
</function>
