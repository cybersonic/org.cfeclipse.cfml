<?xml version="1.0" encoding="UTF-8"?>

<!--
	String QuotedValueList(query.column [, delimiter ])
-->
<function xmlns="http://www.cfeclipse.org/version1/dictionary"
	name="quotedvaluelist" returns="String">
	<help><![CDATA[
		Gets the values of each record returned from an executed query.
		CFML does not evaluate the arguments
	]]></help>
	<parameter name="column" type="QueryColumn" required="true">
		<help><![CDATA[
		]]></help>
	</parameter>
	<parameter name="delimiter" type="String" required="false">
		<help><![CDATA[
		]]></help>
		<values default=",">
			<value option="," />
			<value option="|" />
			<value option=";" />
			<value option="chr(9)" />
			<value option="chr(10)" />
			<value option="chr(13)" />
		</values>
	</parameter>
</function>
