<?xml version="1.0" encoding="UTF-8"?>

<!--
	Numeric Day(date)
-->
<function xmlns="http://www.cfeclipse.org/version1/dictionary"
	name="day" returns="Numeric">
	<help><![CDATA[
		Determines the day of the month, in a date.
		The ordinal for the day of the month, ranging from 1 to 31.
	]]></help>
	<parameter name="date" type="DateTime" required="true">
		<help><![CDATA[
		]]></help>
		<values>
			<value option="now()" />
		</values>
	</parameter>
</function>
