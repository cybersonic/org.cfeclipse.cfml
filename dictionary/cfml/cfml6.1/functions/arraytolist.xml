<!--
	String ArrayToList(array [, delimiter ])
-->
<function xmlns="http://www.cfeclipse.org/version1/dictionary"
	name="arraytolist" returns="String">
	<help><![CDATA[
		Converts a one-dimensional array to a list.
	]]></help>
	<parameter name="array" type="Array" required="true">
		<help><![CDATA[
		]]></help>
	</parameter>
	<parameter name="delimiter" type="String" required="false">
		<help><![CDATA[
		]]></help>
		<values default=",">
			<value option="," />
			<value option="|" />
			<value option="_" />
			<value option=";" />
			<value option=":" />
		</values>
	</parameter>
</function>
